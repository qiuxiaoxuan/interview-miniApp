  <view class='swiper'>
    <image src='/images/轮播图.jpg' class='swiperImage'></image>
  </view>
  <view class='navbar'>
    <view class='navbar-child'>
      <image src='/images/icon_gray/letter.png'></image>
      <text>功能1</text>
    </view>
    <view class='navbar-child'>
      <image src='/images/icon_gray/people.png'></image>
