            <view class='child-one'><image src='/images/icon_white/balance.png'></image></view>
            <view class='child-two'><image src='/images/icon_white/balance.png'></image></view>
            <view class='child-three'><image src='/images/icon_white/balance.png'></image></view>
            <view class='child-four'><image src='/images/icon_white/balance.png'></image></view>
          </view>
